@model IList<durer2.ServiceReference.ContentDto>

@{
    ViewBag.Title = "Basın Ayrıntı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar content-box" style="display: block;">
                <ul class="nav">
                    <li><a href="/Admin/Pages/28"><i class="glyphicon glyphicon-file"></i> Sayfa Yönetimi</a></li>
                    <li><a href="/Admin/News"><i class="glyphicon glyphicon-bullhorn"></i> Haber Yönetimi</a></li>
                    
                    <li class="current"><a href="/Admin/MediaList"><i class="glyphicon glyphicon-globe"></i> Basın</a></li>
                    <li><a href="/Admin/Catalogs"><i class="glyphicon glyphicon-certificate"></i> Kataloglar</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-header">
                                <div class="panel-title">Basın Ayrıntı</div>
                            </div>
                            <div class="content-box-large box-with-header">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Dil</th>
                                            <th>Başlık</th>
                                            <th>Düzenleme</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@(item.Lang == "tr-TR" ? "Türkçe" : "İngilizce")</td>
                                                <td>@((item.Title.Length > 50) ? item.Title.Substring(0, 50) + "..." : item.Title)</td>
                                                <td>
                                                    <a href="/Admin/MediaEdit/@item.LocaleId" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-edit"></i> Düzenle</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
