@model Dto.ContactDto
@{
    ViewBag.Title = "İletişim Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar content-box" style="display: block;">
                <ul class="nav">
                    <li><a href="/Admin/Pages/28"><i class="glyphicon glyphicon-file"></i> Sayfa Yönetimi</a></li>
                    <li><a href="/Admin/News"><i class="glyphicon glyphicon-bullhorn"></i> Haber Yönetimi</a></li>
                    <li><a href="/Admin/MediaList"><i class="glyphicon glyphicon-globe"></i> Basın</a></li>
                    <li><a href="/Admin/Catalogs"><i class="glyphicon glyphicon-certificate"></i> Kataloglar</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-header">
                                <div class="panel-title">İletişim Bilgileri</div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @if (ViewData["success"] != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewData["success"].ToString()
                                    </div>
                                }
                                <form role="form" method="post" action="/Admin/Contact" enctype="multipart/form-data">
                                    <fieldset>
                                        <div class="form-group">
                                            <label>Adres</label>
                                            <textarea class="form-control" rows="3" name="Address" id="editor" required>@Model.Address</textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Cep Tel. No</label>
                                            <input class="form-control" type="text" name="Mobile" value="@Model.Mobile" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Telefon No</label>
                                            <input class="form-control" type="text" name="Tel" value="@Model.Tel" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Fax No</label>
                                            <input class="form-control" type="text" name="Fax" value="@Model.Fax" required>
                                        </div>
                                        <div class="form-group">
                                            <label>E-Posta</label>
                                            <input class="form-control" type="text" name="Email" value="@Model.Email" required>
                                        </div>
                                    </fieldset>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save"></i>
                                            Kaydet
                                        </button>
                                    </div>
                                    @Html.HiddenFor(Model => Model.Id)
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

