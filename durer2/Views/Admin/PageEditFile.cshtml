@model durer2.ServiceReference.PageFileDto
@{
    ViewBag.Title = "Dosya Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar content-box" style="display: block;">
                <ul class="nav">
                    <li class="current"><a href="/Admin/Pages/28"><i class="glyphicon glyphicon-file"></i> Sayfa Yönetimi</a></li>
                    <li><a href="/Admin/News"><i class="glyphicon glyphicon-bullhorn"></i> Haber Yönetimi</a></li>
                    <li><a href="/Admin/MediaList"><i class="glyphicon glyphicon-globe"></i> Basın</a></li>
                    <li><a href="/Admin/Catalogs"><i class="glyphicon glyphicon-certificate"></i> Kataloglar</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-header">
                                <div class="panel-title">Dosya Düzenle</div>
                                <div class="panel-options">
                                    <a href="/Admin/PageList/@Model.PageId" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-chevron-left"></i> Geri Dön</a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @if (ViewData["success"] != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewData["success"].ToString()
                                    </div>
                                }
                                <form role="form" method="post" action="/Admin/PageEditFile/@Url.RequestContext.RouteData.Values["id"]" enctype="multipart/form-data">
                                    <fieldset>
                                        <div class="form-group">
                                            <label>Başlık</label>
                                            <div><input type="text" class="form-control" name="Title" value="@Model.Title" required /></div>
                                        </div>
                                        <div class="form-group">
                                            <label>Dosya <a href="@Url.Content(Model.FileUrl)" target="_blank">Mevcut dosyayı görüntüle</a></label>
                                            <div><input type="file" class="btn btn-default" name="FileUrl" /></div>
                                        </div>
                                    </fieldset>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save"></i>
                                            Kaydet
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
