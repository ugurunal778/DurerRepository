
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/reset.css" />
    <title>msds</title>
    <style>
        #msds-form {
            width: 470px;
            padding: 15px;
        }

        .msds-row {
            width: 100%;
            float: left;
            margin-bottom: 20px;
            font-size: 12px;
        }

        #msds-form h2 {
            color: #2263b3;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .row-left {
            float: left;
            width: 135px;
        }

        .row-right {
            float: right;
            width: 305px;
        }

            .row-right input, .row-right textarea {
                width: 100%;
                border: 1px solid #d6d6d6;
                outline: none;
                box-shadow: 0px 0px 3px #888888;
            }

        .msds-row input[type="submit"] {
            width: 100%;
            color: #fff;
            background-color: #2263b3;
            border: none;
            height: 25px;
            border-radius: 5px;
            -moz-border-radius: 5px;
            cursor: pointer;
        }

        .msds-3col div {
            width: 150px;
        }

        .msds-3col input {
            width: 80px;
            border: 1px solid #d6d6d6;
            outline: none;
            box-shadow: 0px 0px 3px #888888;
        }
    </style>
</head>
<body>
    <div id="msds-form">
        <h2>@durer2.Resource.Resources.RequestFormUpper</h2>
        @if (ViewData["success"] != null)
        {
            <div class="alert alert-success">
                @durer2.Resource.Resources.Success
            </div>
        }
        else
        {

            <form action="/msds" method="post">
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.ContactPerson</div>
                    <div class="row-right">
                        <input type="text" name="FullName" required />
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.Title</div>
                    <div class="row-right">
                        <input type="text" name="Title" required />
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.CompanyName</div>
                    <div class="row-right">
                        <input type="text" name="Company" required />
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.Sector</div>
                    <div class="row-right">
                        <input type="text" name="Business" required />
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.Address</div>
                    <div class="row-right">
                        <input type="text" name="Address" required />
                    </div>
                </div>
                <div class="msds-row msds-3col">
                    <div style="float: left;">@durer2.Resource.Resources.City: <input type="text" name="City" required /></div>
                    <div style="float: left;">@durer2.Resource.Resources.ZipCode: <input type="number" name="ZipCode" required /></div>
                    <div style="float: right;text-align: right;">@durer2.Resource.Resources.Country: <input type="text" name="Country" required /></div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.Telephone</div>
                    <div class="row-right">
                        <input type="tel" name="Phone" required />
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left">@durer2.Resource.Resources.Message</div>
                    <div class="row-right">
                        <textarea rows="3" name="Message" required></textarea>
                    </div>
                </div>
                <div class="msds-row">
                    <div class="row-left"></div>
                    <div class="row-right">
                        <input type="submit" value="@durer2.Resource.Resources.Send" />
                    </div>
                </div>
            </form>
        }
    </div>
</body>
</html>
