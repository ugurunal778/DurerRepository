@model Dto.PageDto

@{
    ViewBag.Title = "Sayfa Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar content-box" style="display: block;">
                <ul class="nav">
                    <li class="current"><a href="/Admin/Pages/28"><i class="glyphicon glyphicon-file"></i> Sayfa Yönetimi</a></li>
                    <li><a href="/Admin/News"><i class="glyphicon glyphicon-bullhorn"></i> Haber Yönetimi</a></li>
                    <li><a href="/Admin/Contact"><i class="glyphicon glyphicon-info-sign"></i> İletişim Bilgileri</a></li>
                    <li><a href="/Admin/AppList"><i class="glyphicon glyphicon-ok"></i> Başvurular</a></li>
                    <li><a href="/Admin/MediaList"><i class="glyphicon glyphicon-globe"></i> Basın</a></li>
                    <li><a href="/Admin/Catalogs"><i class="glyphicon glyphicon-certificate"></i> Kataloglar</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-header">
                                <div class="panel-title">Sayfa Ekle</div>

                                <div class="panel-options">
                                    <a href="/Admin/Pages/@ViewContext.RouteData.Values["id"]" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-chevron-left"></i> Geri Dön</a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @if (ViewData["success"] != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewData["success"].ToString()
                                    </div>
                                }
                                <form role="form" method="post" action="/Admin/PageAdd/@ViewContext.RouteData.Values["id"]" enctype="multipart/form-data">
                                    <fieldset>
                                        <div class="form-group">
                                            <label>Sayfa</label>
                                            <select onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);" class="form-control" style="margin-bottom: 20px;" required>
                                                <option value="/Admin/PageAdd/28" @((Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]) == 28) ? " selected" : "")>@durer2.Resource.Resources.CompanyUpper</option>
                                                <option value="/Admin/PageAdd/29" @((Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]) == 29) ? " selected" : "")>@durer2.Resource.Resources.IndustriesUpper</option>
                                                <option value="/Admin/PageAdd/30" @((Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]) == 30) ? " selected" : "")>@durer2.Resource.Resources.ProductsUpper</option>
                                                <option value="/Admin/PageAdd/31" @((Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]) == 31) ? " selected" : "")>@durer2.Resource.Resources.OurServicesUpper</option>
                                                <option value="/Admin/PageAdd/33" @((Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]) == 33) ? " selected" : "")>@durer2.Resource.Resources.HrUpper</option>
                                            </select>
                                            <select class="form-control" name="ParentId" required>
                                                <option value="0">ALT BAŞLIK YOK</option>
                                                @foreach (var item in ViewBag.parentPages)
                                                {
                                                    <option value="@item.Id">@item.Title</option>
                                                }
                                            </select>

                                        </div>
                                        <div class="form-group">
                                            <label>Başlık</label>
                                            <input class="form-control" type="text" name="Title" required>
                                        </div>
                                        <div class="form-group">
                                            <label>İçerik</label>
                                            <textarea class="form-control" rows="3" name="Content" id="editor"></textarea>
                                        </div>
                                    </fieldset>
                                    <div class="form-group">
                                        <label>Banner</label>
                                        <input type="file" class="btn btn-default" name="ImageUrl" required />
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save"></i>
                                            Kaydet
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

